<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
</head>
<body>
    <%- include('../partials/nav') %>

    <div class="container mt-3">
        <div class="row">
                <div class="col-md-12 mt-3">
                    <form  method="post">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <input type="hidden" name="categoryid" value="<%= category.id %>">
                        <div class="row mb-3">
                            <label for="basliq" class="col-sm-2 col-form-label">
                                Name
                            </label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="name" name="name" value="<%= category.name %>">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-8 offset-sm-2">
                                <button type="submit" class="btn btn-primary">Yadda saxla</button>
                            </div>
                        </div>
                    </form>
                </div>
                <p>
                    Saat sayi:<%= countWatch %>
                </p>
                <table class="table table-bordered table-striped mt-3">
                    <thead>
                        <tr>
                            <th style="width: 50px;">id</th>
                            <th style="width: 150px;">sekil</th>
                            <th>basliq</th>
                            <th style="width: 208px;"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <% watches.forEach(watch => { %>
                             <tr>
                                <td>#<%= watch.dataValues.id %></td>
                                <td>
                                    <img src="/static/images/<%= watch.dataValues.sekil %>" alt="" class="img-fluid">
                                </td>
                                <td>
                                    <%= watch.basliq %>
                                </td>
                                <td>
                                    <a class="btn btn-sm btn-primary" href="/admin/watches/<%= watch.dataValues.id %>">edit</a>

                                    <form style="display: inline-block" action="/admin/categories/remove" method="post">
                                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                        <input type="hidden" name="watchid" value="<%= watch.id %>">
                                        <input type="hidden" name="categoryid" value="<%= category.id %>">
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            Kateqoriyadan cixart
                                        </button>
                                    </form>                                   
                                </td>
                             </tr>
                            <% }) %>
                        </tr>
                    </tbody>
                </table>
            </div>
            </div>      
</body>
</html>