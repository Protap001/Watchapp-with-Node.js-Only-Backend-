<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
</head>
<body>
    <%- include('../partials/nav') %>

    <div class="container mt-3">
       <div class="row">
        <div class="col-md-12 mt-3">

            <% if (action !='undefined' && action=='edit') { %>
             <div class="alert alert-success"> 
              <%= watchid %> id nomreli Saat yenilendi
             </div>

            <% } %>
            <% if (action !='undefined' && action=='create') { %>
                <div class="alert alert-success"> 
                   Saat yuklendi
                </div>

               <% } %>
               <% if (action !='undefined' && action=='delete') { %>
                <div class="alert alert-success"> 
                  Saat silindi
                </div>

               <% } %>
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th style="width: 50px;">id</th>
                        <th style="width: 150px;">sekil</th>
                        <th>basliq</th>
                        <th>kateqoriya</th>
                        <th style="width: 130px;"></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <% watches.forEach(watch => { %>
                         <tr>
                            <td>#<%= watch.dataValues.id %></td>
                            <td>
                                <img src="/static/images/<%= watch.dataValues.sekil %>" alt="" class="img-fluid">
                            </td>
                            <td>
                                <%= watch.basliq %>
                            </td>                          
                            <td>
                                <% watch.categories.forEach(category => { %>
                                   <p><%= category.name %></p>
                                          <% }) %>
                                        </td>
                                
                            <td>
                                <a class="btn btn-sm btn-primary" href="/admin/watches/<%= watch.dataValues.id %>">edit</a>
                                <a class="btn btn-sm btn-danger" href="/admin/watch/delete/<%= watch.dataValues.id %>">delete</a>
                            </td>
                         </tr>
                        <% }) %>
                    </tr>
                </tbody>
            </table>
        </div>
       </div>
        
    </div>
</body>
</html>