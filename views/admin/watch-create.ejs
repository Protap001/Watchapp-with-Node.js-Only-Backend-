<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
</head>
<body>
    <%- include('../partials/nav') %>

    <div class="container mt-3">
        <div class="row">
                <div class="col-md-12 mt-3">

                    <% if (typeof message !="undefined") { %>
                        <div class="alert alert-<%= message.class %>">
                               <%= message.text %>
                           </div>
                   <% } %> 

                    <form  method="post" enctype="multipart/form-data" action="/admin/watch/create?_csrf=<%= csrfToken %>">
                        <div class="row mb-3">
                            <label for="basliq" class="col-sm-2 col-form-label">
                                Basliq
                            </label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="basliq" name="basliq" value=" <%= typeof values !=="undefined" ? values.basliq : "" %>">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="altbasliq" class="col-sm-2 col-form-label">
                                altbasliq
                            </label>
                            <div class="col-sm-8">
                                <textarea name="altbasliq" class="form-control" rows="5"></textarea>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label for="aciqlama" class="col-sm-2 col-form-label">
                               Aciqlama
                            </label>
                            <div class="col-sm-8">
                                <textarea id="editor" name="aciqlama" class="form-control" rows="10"></textarea>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="sekil" class="col-sm-2 col-form-label">
                               Sekil
                            </label>
                            <div class="col-sm-8">
                                <input type="file" class="form-control" id="sekil" name="sekil">
                            </div>
                        </div>                      
                        <div class="row mb-3">
                            <div class="col-sm-8 offset-sm-2">
                              <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="anasehife"  name='anasehife' >
                                <label class="form-check-label" for="anasehife">
                                    Anasehife
                                </label>
                              </div>
                            </div>
                          </div>
                          

                          <div class="row mb-3">
                            <div class="col-sm-8 offset-sm-2">
                              <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="testiq"  name='testiq' >
                                <label class="form-check-label" for="testiq">
                                    Testiq
                                </label>
                              </div>
                            </div>
                          </div>

                          <div class="row mb-3">
                            <div class="col-sm-8 offset-sm-2">
                              <button type="submit" class="btn btn-primary">Qeydiyyat</button>
                            </div>
                          </div>
                    </form>
                </div>
            </div>
            </div>


           <%- include('../partials/script') %>

       
</body>
</html>