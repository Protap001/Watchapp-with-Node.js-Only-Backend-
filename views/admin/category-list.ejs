<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
</head>
<body>
    <%- include('../partials/nav') %>

    <div class="container mt-3">
       <div class="row">
        <div class="col-md-12 mt-3">

            <% if (action != 'undefined' && action=='edit') { %>
             <div class="alert alert-success"> 
              <%= categoryid %> id nomreli Kateqoriya yenilendi
             </div>

            <% } %>
            <% if (action != 'undefined' && action=='create') { %>
                <div class="alert alert-success"> 
                    Kateqoriya yuklendi
                </div>

               <% } %>
               <% if (action !='undefined' && action=='delete') { %>
                <div class="alert alert-success"> 
                    Kateqoriya silindi
                </div>

               <% } %>
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th style="width: 50px;">id</th>
                        <th style="width: 150px;">name</th>
                        <th style="width: 130px;"></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <% categories.forEach(category => { %>
                         <tr>
                            <td>#<%= category.dataValues.id %></td>
                            
                            <td>
                                <%= category.dataValues.name %>
                            </td>
                            <td>
                                <a class="btn btn-sm btn-primary" href="/admin/categories/<%= category.dataValues.id %>">edit</a>
                                <a class="btn btn-sm btn-danger" href="/admin/category/delete/<%= category.dataValues.id %>">delete</a>
                            </td>
                         </tr>
                        <% }) %>
                    </tr>
                </tbody>
            </table>
        </div>
       </div>
        
    </div>
</body>
</html>